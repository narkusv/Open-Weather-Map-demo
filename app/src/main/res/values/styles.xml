<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/WeatherAppEditText</item>
        <item name="android:windowBackground">@drawable/bg_main</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="buttonStyle">@style/WeatherAppButton</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.ImageButton</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textAppearanceBody1">@style/TextAppearance.WeatherApp.Body</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.WeatherApp.Headline</item>
        <item name="android:textAppearanceMedium">?attr/textAppearanceBody1</item>
    </style>

    <style name="TextAppearance.WeatherApp" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.WeatherApp.Body">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.WeatherApp.Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WeatherAppEditText" parent="@android:style/Widget.EditText">
        <item name="android:padding">@dimen/padding_m</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WeatherAppButton" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/padding_m</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
